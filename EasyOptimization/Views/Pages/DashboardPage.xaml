<Page
    x:Class="EasyOptimization.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EasyOptimization.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage, IsDesignTimeCreatable=False}"
    d:DesignHeight="480"
    d:DesignWidth="800"
    mc:Ignorable="d"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True">
    <!-- 减少布局模糊 -->

    <!-- 外层Grid简化：减少嵌套层级，明确布局结构 -->
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <!-- 顶部区域自适应高度 -->
            <RowDefinition Height="*" />
            <!-- 底部区域占满剩余空间 -->
        </Grid.RowDefinitions>

        <!-- 顶部按钮区域：用StackPanel替代嵌套Grid，减少布局计算开销 -->
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <ui:Anchor
                Icon="{ui:SymbolIcon Link24}" 
                NavigateUri="https://youngbat.qzz.io">
                Our Website
            </ui:Anchor>
            <ui:Anchor
                Appearance="Primary" 
                Icon="{ui:ImageIcon 'pack://application:,,,/Assets/Images/Github-Icon.png'}" 
                NavigateUri="https://github.com/YBTsa/EasyOptimization" 
                Margin="0,5,0,0">
                Our Github Repository
            </ui:Anchor>
        </StackPanel>
        <ui:TextBlock Grid.Row="1" FontSize="20" FontWeight="Medium">Performance</ui:TextBlock>
        <!-- 底部内容区域：强制占满剩余空间 -->
        <WrapPanel
            Grid.Row="2" 
            VerticalAlignment="Stretch" 
            HorizontalAlignment="Stretch">

            <!-- Card强制占满单元格 -->
            <ui:Card 
                Grid.Row="0" 
                Grid.Column="0" 
                VerticalAlignment="Stretch" 
                HorizontalAlignment="Stretch"
                Margin="4" Width="259" Height="184">
                <Grid Height="152">
                    <ui:FontIcon 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top" 
                        Glyph="&#xE950;" 
                        Width="40" 
                        Height="40"/>
                    <ui:TextBlock 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Left" 
                        Text="指标名称"/>
                    <ui:TextBlock 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Right" 
                        Text="指标值"/>
                </Grid>
            </ui:Card>
            <ui:Card 
                Grid.Row="0" 
                Grid.Column="1" 
                VerticalAlignment="Stretch" 
                HorizontalAlignment="Stretch"
                Margin="4" Width="259" Height="184">
                <Grid Height="152">
                    <ui:FontIcon 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top" 
                        Glyph="&#xE964;" 
                        Width="40" 
                        Height="40"/>
                    <ui:TextBlock 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Left" 
                        Text="指标名称"/>
                    <ui:TextBlock 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Right" 
                        Text="指标值"/>
                </Grid>
            </ui:Card>
            <ui:Card 
                Grid.Row="0" 
                Grid.Column="2" 
                VerticalAlignment="Stretch" 
                HorizontalAlignment="Stretch"
                Margin="4" Width="258" Height="184">
                <Grid Height="152">
                    <ui:FontIcon 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top" 
                        Glyph="&#xF211;" 
                        Width="40" 
                        Height="40"/>
                    <ui:TextBlock 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Left" 
                        Text="指标名称"/>
                    <ui:TextBlock 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Right" 
                        Text="指标值"/>
                </Grid>
            </ui:Card>
            <ui:Card 
                Grid.Row="1" 
                Grid.Column="0" 
                VerticalAlignment="Stretch" 
                HorizontalAlignment="Stretch"
                Margin="4" Width="259" Height="184">
                <Grid Height="152">
                    <ui:FontIcon 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top" 
                        Glyph="&#xF211;" 
                        Width="40" 
                        Height="40"/>
                    <ui:TextBlock 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Left" 
                        Text="指标名称"/>
                    <ui:TextBlock 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Right" 
                        Text="指标值"/>
                </Grid>
            </ui:Card>
            <ui:Card 
                Grid.Row="1" 
                Grid.Column="1" 
                VerticalAlignment="Stretch" 
                HorizontalAlignment="Stretch"
                Margin="4" Width="259" Height="184">
                <Grid Height="152">
                    <ui:FontIcon 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top" 
                        Glyph="&#xF211;" 
                        Width="40" 
                        Height="40"/>
                    <ui:TextBlock 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Left" 
                        Text="指标名称"/>
                    <ui:TextBlock 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Right" 
                        Text="指标值"/>
                </Grid>
            </ui:Card>
            <ui:Card 
                Grid.Row="1" 
                Grid.Column="2" 
                VerticalAlignment="Stretch" 
                HorizontalAlignment="Stretch"
                Margin="4" Width="258" Height="184">
                <Grid Height="152">
                    <ui:FontIcon 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top" 
                        Glyph="&#xF211;" 
                        Width="40" 
                        Height="40"/>
                    <ui:TextBlock 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Left" 
                        Text="指标名称"/>
                    <ui:TextBlock 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Right" 
                        Text="指标值"/>
                </Grid>
            </ui:Card>
        </WrapPanel>
    </Grid>
</Page>